{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/*",
      "use": "@vercel/static"
    },
    {
      "src": "data/*",
      "use": "@vercel/static"
    },
    {
      "src": "mp3/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "static/$1"
    },
    {
      "src": "/data/(.*)",
      "dest": "data/$1"
    },
    {
      "src": "/mp3/(.*)",
      "dest": "mp3/$1"
    },
    {
      "src": "/(.*)", 
      "dest": "api/app.py"
    }
  ]
}
